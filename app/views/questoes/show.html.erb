<%- model_class = Questao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @questao.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:figura) %>:</strong></dt>
  <dd><%= image_tag @questao.figura.url(:medium) %></dd>
   
  


</dl>
  <% @questoes.each do |questao| %>
 <%  @quest = questao.id
     end %>  

<div class="form-actions">

  <%= link_to t('.back', :default => t("helpers.links.back")),
              questoes_path, :class => 'btn'  %>
  <%= link_to "Cadastrar Resposta", "/respostas?questao_id="+@questao.id.to_s+"&&pagina=questoes&&page=1", :class => 'btn btn-primary ' %>

  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_questao_path(@questao), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              questao_path(@questao),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
        
</div>
 