<%= form_for @tema do |f| %>
  <div class="form-group">
    <%= f.label :descricao, :class => 'control-label' %>
    <%= f.text_field :descricao, :class => 'form-control' %>
  </div>

  <br>

  <div class="form-group">
    <%= f.label :sub_grupo_id, :class => 'control-label' %>  

    <%= f.collection_select(:sub_grupo_id, SubGrupo.all, :id, :nome) %>


  </div>
<br>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),"/temas?subgrupo_id="+@SubGrupo_id.to_s, :class => 'btn' %>
  </div>
<% end %>
