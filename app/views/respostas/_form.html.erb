<br>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>

     <%= link_to "Respostas", "/respostas?questao_id="+@questao_id.to_s+"&&pagina=questoes&&page="+@pagen.to_s, :class => 'btn btn-primary' %>
  </div>



<% end %>
